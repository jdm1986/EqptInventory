@model EqptInv.Models.MachineViewModel

@{
    var isEditMode = Model.Id != null;
    ViewBag.Title = isEditMode ? "Edit" + Model.MachineName : "Add Machine";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm">
        @using (Html.BeginForm(isEditMode ? "EditMachine" : "AddMachine", "Machine"))
        {
        <div class="form-group">
            @Html.LabelFor(m => m.Num)
            @Html.TextBoxFor(m => m.Num, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Make)
            @Html.TextBoxFor(m => m.Make, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Model)
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Hours)
            @Html.TextBoxFor(m => m.Hours, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
         @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>

